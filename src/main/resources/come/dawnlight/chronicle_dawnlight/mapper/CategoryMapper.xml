<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="come.dawnlight.chronicle_dawnlight.mapper.CategoryMapper">

    <!-- 插入分类 -->
    <insert id="insert" parameterType="come.dawnlight.chronicle_dawnlight.pojo.po.CategoryPO">
        INSERT INTO categories (name, user_id, created_at, updated_at)
        VALUES (#{name}, #{userId}, #{createdAt}, #{updatedAt})
    </insert>

    <!-- 更新分类 -->
    <update id="update" parameterType="come.dawnlight.chronicle_dawnlight.pojo.po.CategoryPO">
        UPDATE categories
        SET name = #{name}, updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <!-- 删除分类 -->
    <delete id="delete" parameterType="Long">
        DELETE FROM categories WHERE id = #{id}
    </delete>

    <!-- 根据用户 ID 查询分类 -->
    <select id="selectByUserId" resultType="come.dawnlight.chronicle_dawnlight.pojo.po.CategoryPO">
        SELECT * FROM categories WHERE user_id = #{userId}
    </select>

</mapper>
